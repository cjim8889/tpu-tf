# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

project_id = "your-gcp-project-id"
region     = "us-central2"
zone       = "us-central2-b"

# Snapshot and disk configuration
data_snapshot_name = "your-data-snapshot-name"
data_disk_size_gb  = 1000

# Pre-created resources (create these first using bucket-only.tf)
checkpoint_bucket_name = "your-project-id-tpu-checkpoints"
service_account_id     = "tpu-bucket-sa"

# TPU configuration
tpu_accelerator_type = "v6e-256"
tpu_topology        = "8x16"
runtime_version     = "tpu-vm-tf-2.15.0-pjrt"